{
	"info": {
		"name": "mLITE API",
		"description": "Collection for mLITE API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonData = pm.response.json();",
							"if (jsonData.token) {",
							"    pm.collectionVariables.set(\"token\", jsonData.token);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"username\": \"{{username}}\",\n    \"password\": \"{{password}}\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/admin/api/login",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"admin",
						"api",
						"login"
					]
				}
			},
			"response": []
		},
		{
			"name": "Pasien",
			"item": [
				{
					"name": "List Pasien",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "X-Api-Key",
								"value": "{{apiKey}}",
								"type": "text"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/admin/api/pasien/list?page={{page}}&per_page={{per_page}}&s={{s}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"admin",
								"api",
								"pasien",
								"list"
							],
							"query": [
								{
									"key": "page",
									"value": "{{page}}"
								},
								{
									"key": "per_page",
									"value": "{{per_page}}"
								},
								{
									"key": "s",
									"value": "{{s}}"
								}
							]
						}
					},
					"response": []
				},
				{
					"name": "Show Pasien",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "X-Api-Key",
								"value": "{{apiKey}}",
								"type": "text"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/admin/api/pasien/show/{{no_rkm_medis}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"admin",
								"api",
								"pasien",
								"show",
								"{{no_rkm_medis}}"
							]
						}
					},
					"response": []
				},
				{
					"name": "Riwayat Perawatan",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "X-Api-Key",
								"value": "{{apiKey}}",
								"type": "text"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/admin/api/pasien/riwayatperawatan/{{no_rkm_medis}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"admin",
								"api",
								"pasien",
								"riwayatperawatan",
								"{{no_rkm_medis}}"
							]
						}
					},
					"response": []
				},
				{
					"name": "Create Pasien",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "X-Api-Key",
								"value": "{{apiKey}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"nm_pasien\": \"Pasien Baru\",\n    \"no_ktp\": \"1234567890123456\",\n    \"jk\": \"L\",\n    \"tgl_lahir\": \"1990-01-01\",\n    \"alamat\": \"Jl. Contoh No. 1\",\n    \"no_tlp\": \"08123456789\",\n    \"kd_pj\": \"UMUM\",\n    \"no_rkm_medis\": \"{{no_rkm_medis}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/admin/api/pasien/create",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"admin",
								"api",
								"pasien",
								"create"
							]
						}
					},
					"response": []
				},
				{
					"name": "Update Pasien",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "X-Api-Key",
								"value": "{{apiKey}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"nm_pasien\": \"Pasien Update\",\n    \"alamat\": \"Jl. Update No. 2\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/admin/api/pasien/update/{{no_rkm_medis}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"admin",
								"api",
								"pasien",
								"update",
								"{{no_rkm_medis}}"
							]
						}
					},
					"response": []
				},
				{
					"name": "Delete Pasien",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "X-Api-Key",
								"value": "{{apiKey}}",
								"type": "text"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/admin/api/pasien/delete/{{no_rkm_medis}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"admin",
								"api",
								"pasien",
								"delete",
								"{{no_rkm_medis}}"
							]
						}
					},
					"response": []
				}
			]
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://mlite.loc",
			"type": "string"
		},
		{
			"key": "apiKey",
			"value": "YOUR_API_KEY_HERE",
			"type": "string"
		},
		{
			"key": "username",
			"value": "admin",
			"type": "string"
		},
		{
			"key": "password",
			"value": "",
			"type": "string"
		},
		{
			"key": "token",
			"value": "",
			"type": "string"
		},
		{
			"key": "s",
			"value": "",
			"type": "string"
		},
		{
			"key": "page",
			"value": "1",
			"type": "string"
		},
		{
			"key": "per_page",
			"value": "10",
			"type": "string"
		},
		{
			"key": "no_rkm_medis",
			"value": "000001",
			"type": "string"
		}
	]
}